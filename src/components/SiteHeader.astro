---
import { siteConfig } from '@/data/site';

const links = [
  { label: 'About', href: '/#about' },
  { label: 'Experience', href: '/#experience' },
  { label: 'Projects', href: '/#projects' },
  { label: 'Contact', href: '/#contact' },
  { label: 'Blog', href: '/blog/' }
];
---

<header class="sticky top-0 z-30 border-b border-border/80 bg-canvas/85 backdrop-blur-md">
  <div class="mx-auto flex w-[min(1080px,92vw)] flex-wrap items-center justify-between gap-4 py-4">
    <a href="/" class="text-sm font-semibold tracking-wide text-slate-100">{siteConfig.name}</a>
    <nav aria-label="Primary">
      <ul class="flex flex-wrap items-center gap-2 text-sm text-muted md:gap-4">
        {
          links.map((link) => (
            <li>
              <a class="rounded-md px-2 py-1 transition hover:text-slate-100 focus-visible:outline focus-visible:outline-2 focus-visible:outline-accent" href={link.href}>
                {link.label}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</header>

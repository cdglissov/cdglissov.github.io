---
import Footer from '@/components/Footer.astro';
import SiteHeader from '@/components/SiteHeader.astro';
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout
  title="Page not found | Christian D. Glissov"
  description="The requested page was not found."
  path="/404/"
  noIndex
  showBackdrop={false}
>
  <SiteHeader />
  <main id="content" class="pb-16 pt-10 md:pt-14">
    <section class="section-shell text-center">
      <p class="mono text-xs uppercase tracking-[0.2em] text-muted">404</p>
      <h1 class="mt-2 text-3xl font-semibold text-slate-100">Page not found</h1>
      <p class="mt-3 text-muted">The link may be outdated or the page may have moved.</p>
      <a class="mt-5 inline-block text-sm text-accent underline-offset-4 hover:underline" href="/">
        Return home
      </a>
    </section>
  </main>
  <Footer />
</BaseLayout>
